        <p>Genero: <%= movie.genero.name %></p>
        <p>Actores: </p>
        <ul>
            <% for( let i = 0; i < movie.actores.length; i++ ) { %>
            <li>
                <p><%= movie.actores[i].first_name%> <%= movie.actores[i].last_name%></p>
            </li>
            <% } %>
          </ul>   
        <br>
        <section>
            <a href="/edit/<%= movie.id %> ">Modificar</a>
            <a href="/delete/<%= movie.id %> ">Eliminar</a>
        </section>
        <a href="/">Lista de Peliculas</a>
    </body>
</html>